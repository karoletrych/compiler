{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "K#",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "constants": {
            "name": "constant.language.ksharp",
            "patterns": [
                {
                    "match": "\\b-?[0-9][0-9_]*((\\.([0-9][0-9_]*([eE][+-]??[0-9][0-9_]*)?)?)|([eE][+-]??[0-9][0-9_]*))",
                    "name": "constant.numeric.floating-point.ksharp"
                },
                {
                    "match": "\\b(-?((0(x|X)[0-9a-fA-F][0-9a-fA-F_]*)|(0(o|O)[0-7][0-7_]*)|(0(b|B)[01][01_]*)|([0-9][0-9_]*)))",
                    "name": "constant.numeric.integer.nativeint.ksharp"
                },
                {
                    "match": "\\b(true|false|null)\\b",
                    "name": "constant.others.ksharp"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b(if|else|for|return|while|break|continue)\\b",
                    "name": "keyword.control.ksharp"
                }
            ]
        },
        "storage": {
            "name": "storage.language.ksharp",
            "patterns": [
                {
                    "match": "\\b(bool|char|int|float|double|string|void|var|val|class|fun)\\b",
                    "name": "storage.type.ksharp"
                }
            ]
        },
        "strings": {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double.ksharp",
            "patterns": [
                {
                    "match": "\\\\.",
                    "name": "constant.character.escape.ksharp"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.ksharp",
                    "begin": "(\\(\\*(?!\\)))",
                    "end": "(\\*\\))",
                    "beginCaptures": {
                        "1": {
                            "name": "comment.block.ksharp"
                        }
                    },
                    "endCaptures": {
                        "1": {
                            "name": "comment.block.ksharp"
                        }
                    }

                },
                {
                    "name": "comment.line.double-slash.ksharp",
                    "match": "//.*$"
                }
            ]
        }
    },
    "scopeName": "source.ksharp"
}